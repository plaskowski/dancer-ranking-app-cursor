{
    "name": "flutter-app-screenshot-automation",
    "version": "1.0.0",
    "description": "Automated screenshot testing for Flutter apps",
    "main": "scripts/automated_screenshots.js",
    "scripts": {
        "test:web": "node scripts/automated_screenshots.js",
        "test:android": "flutter drive --target=test_driver/app.dart --driver=test_driver/screenshot_test.dart",
        "test:integration": "flutter test integration_test/screenshot_integration_test.dart",
        "test:all": "npm run test:web && npm run test:android && npm run test:integration",
        "start:web": "flutter run -d chrome --web-renderer html --web-port 8080",
        "setup": "npm install && flutter pub get",
        "clean": "flutter clean && npm run clean:screenshots",
        "clean:screenshots": "rm -rf screenshots/ reports/",
        "server": "python3 -m http.server 8080",
        "test:hosted": "node scripts/hosted_testing.js"
    },
    "dependencies": {
        "puppeteer": "^21.5.0",
        "playwright": "^1.40.0",
        "pixelmatch": "^5.3.0",
        "pngjs": "^7.0.0",
        "sharp": "^0.33.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "multer": "^1.4.5-lts.1",
        "commander": "^11.1.0",
        "chalk": "^5.3.0",
        "ora": "^7.0.1",
        "inquirer": "^9.2.12"
    },
    "devDependencies": {
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "author": "Flutter Screenshot Bot",
    "license": "MIT",
    "keywords": [
        "flutter",
        "screenshot",
        "testing",
        "automation",
        "puppeteer",
        "playwright",
        "visual-testing",
        "regression-testing"
    ]
}