{
  "dart.formatOnSave": true,
  "dart.lineLength": 120,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "dart.analysisExcludedFolders": [
    ".dart_tool",
    "build"
  ],
  "dart.runPubGetOnPubspecChanges": true,
  "files.associations": {
    "*.dart": "dart",
    "*.cursorrules": "markdown"
  },
  "cursor.agent.allowedFileOperations": {
    "delete": [
      "**/*.md",
      "**/*.dart"
    ]
  },
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1E3A2E", // Rich navy green
    "titleBar.activeForeground": "#ffffff", // White text
    "titleBar.inactiveBackground": "#2D4A3D", // Lighter variant
    "titleBar.inactiveForeground": "#cccccc"
  }
}